@model BuyViewModel

@{
    ViewBag.Title = "Buy Now";
}


    <form asp-controller="Transaction" asp-action="CreateTransaction" method="post" class="mt-3">
        <input hidden asp-for="@Model.ProductId" />
        <div class="form-group row">
            <label asp-for="@Model.Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Price" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ProductName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.ProductName" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" placeholder="256753637484" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">Buy now</button>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.ProductId" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
